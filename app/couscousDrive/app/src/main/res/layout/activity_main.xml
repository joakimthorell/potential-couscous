<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="potential_couscous.couscousdrive.activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                                 android:id="@+id/joystick"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 custom:JV_backgroundColor="#009688"
                                                                 custom:JV_borderColor="#00796B"
                                                                 custom:JV_borderWidth="4dp"
                                                                 custom:JV_buttonColor="#FF6E40"
                                                                 custom:JV_buttonSizeRatio="15%"
                                                                 custom:JV_fixedCenter="false"
                                                                 android:layout_marginTop="16dp"
                                                                 custom:layout_constraintTop_toBottomOf="@+id/my_toolbar"
                                                                 android:layout_marginRight="16dp"
                                                                 custom:layout_constraintRight_toRightOf="parent"
                                                                 android:layout_marginLeft="16dp"
                                                                 custom:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/manual_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="Manual "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/acc_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:text="ACC"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/manual_button"
        app:layout_constraintLeft_toRightOf="@+id/manual_button"
        app:layout_constraintRight_toLeftOf="@+id/platoon_button"
        app:layout_constraintHorizontal_bias="0.75" />

    <Button
        android:id="@+id/platoon_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        android:text="Platoon"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/acc_button"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
