<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="potential_couscous.couscousdrive.view.ACCFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/up_button"
        app:layout_constraintTop_toBottomOf="@+id/up_button"
        app:srcCompat="@drawable/left_arrow_white" />

    <ImageButton
        android:id="@+id/up_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up_arrow_white" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/up_button"
        app:layout_constraintTop_toBottomOf="@+id/up_button"
        app:srcCompat="@drawable/right_arrow_white" />

    <ImageButton
        android:id="@+id/down_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/left_button"
        app:layout_constraintTop_toBottomOf="@+id/speed_textview"
        app:srcCompat="@drawable/down_arrow_white" />

    <TextView
        android:id="@+id/speed_textview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/left_button"
        app:layout_constraintTop_toBottomOf="@+id/up_button" />

</android.support.constraint.ConstraintLayout>
