<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="potential_couscous.couscousdrive.view.PlatoonFragment">

    <ImageButton
        android:id="@+id/platoon_button_right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@drawable/acc_button_right"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/right_arrow_white" />

    <ImageButton
        android:id="@+id/platoon_button_left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@drawable/acc_button_left"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/left_arrow_white"
        tools:layoutDirection="rtl" />

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rb_color="@color/colorORANDARK"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_scale="7">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/orange_ball" />

        <ImageView
            android:id="@+id/play_platoon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/click_platoon" />

        <ImageView
            android:id="@+id/stop_platoon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/pause_platoon" />

    </com.skyfishjy.library.RippleBackground>

</android.support.constraint.ConstraintLayout>
