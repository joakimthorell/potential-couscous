<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="potential_couscous.couscousdrive.view.JoystickFragment">

    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/velocity_manual_meter"
        app:sv_maxSpeed="100"
        app:sv_textColor="#00ffffff"
        app:sv_unitTextColor="#00ffffff"
        app:sv_speedTextColor="#00ffffff"
        app:sv_lowSpeedPercent="30"
        app:sv_mediumSpeedPercent="75"
        app:sv_lowSpeedColor="@color/colorPRIMDARK"
        app:sv_mediumSpeedColor="@color/colorORANDARK"
        app:sv_highSpeedColor="@color/colorRED"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        custom:layout_constraintBottom_toBottomOf="@+id/joystick_view"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="@+id/joystick_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        custom:JV_backgroundColor="@color/colorPrimary"
        custom:JV_borderColor="@color/colorBorder"
        custom:JV_borderWidth="2dp"
        custom:JV_buttonImage="@mipmap/orange_ball"
        custom:JV_buttonSizeRatio="19%"
        custom:JV_fixedCenter="false"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        custom:layout_constraintHorizontal_bias="0.468"
        custom:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
